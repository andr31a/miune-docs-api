generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Usuario {
  id         Int         @id @default(autoincrement())
  nombre     String
  email      String      @unique
  rol        String      @default("AUTOR")
  activo     Boolean     @default(true)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt 
  documentos Documento[]
}

model Categoria {
  id          Int         @id @default(autoincrement())
  nombre      String      @unique
  descripcion String?
  activa      Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  documentos  Documento[]
}

model Documento {
  id          Int       @id @default(autoincrement())
  titulo      String
  tipo        String
  peso        String
  estado      String    @default("borrador")
  resumen     String?
  urlArchivo  String?
  usuarioId   Int
  categoriaId Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  usuario     Usuario   @relation(fields: [usuarioId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  categoria   Categoria @relation(fields: [categoriaId], references: [id], onDelete: Restrict, onUpdate: Cascade)

  @@index([usuarioId])
  @@index([categoriaId])
  @@index([estado, createdAt])
}
